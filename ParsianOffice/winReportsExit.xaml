                    <dxg:GridColumn FieldName="cu_Name" Header="نام مشتری" AutoFilterCriteria="Contains"/>
                    <dxg:GridColumn FieldName="cu_NationalCode" Header="کد ملی" AutoFilterCriteria="Contains"/>
